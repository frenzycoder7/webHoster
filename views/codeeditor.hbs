        <script type="text/javascript" src="/static/codeeditor/src/prism-live-css.js"></script>
        <script type="text/javascript" src="/static/codeeditor/src/prism-live-javascript.js"></script>
        <script type="text/javascript" src="/static/codeeditor/index.js"></script>
