<body>
    {{>header}}
    <div style="margin-top: 5%;">
        <div class="text-center my-5">
            <h3><b><strong>Welcome to Bachelorscode CodeEditor V 1.0</strong></b></h3>
        </div>
    </div>
    <form method="POST" action="/hosting/static/codeediter/{{user.username}}">
        <div class="row">
            <div class="col-lg-12">
                <div style="float: right;">
                    <button class="btn btn-success">Save</button>
                    <a href="/hosting/static/" class="btn btn-primary">Dashboard</a>
                </div>
            </div>
            <div class="col-lg-12">
                <pre class="mb-5 ">
                    <textarea name="data" class="prism-live language-css language-html language-js">
                            {{data}}
                    </textarea>
                </pre>
            </div>
        </div>
        
        
        <input type="hidden" name="location" value="{{location}}">
        
    </form>
    
        
            
    
    <div class="fixed-bottom">
        {{>footer}}
    </div>
        
    
    <script>
        var myCustomScrollbar = document.querySelector('.my-custom-scrollbar');
        var ps = new PerfectScrollbar(myCustomScrollbar);

        var scrollbarY = myCustomScrollbar.querySelector('.ps__rail-y');

        myCustomScrollbar.onscroll = function () {
        scrollbarY.style.cssText = `top: ${this.scrollTop}px!important; height: 400px; right: ${-this.scrollLeft}px`;
        }
    </script>
    
        <script src="https://blissfuljs.com/bliss.shy.min.js"></script>
